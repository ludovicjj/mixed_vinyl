{% extends 'base.html.twig' %}

{% block title %}{{ mix.title }} Mix{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="d-inline me-3">{{ mix.title }}</h1>
        <div class="row mt-5">
            <div class="col-12 col-md-4">
                {{ include('_partials/_recordSvg.html.twig') }}
            </div>
            <div class="col-12 col-md-8 ps-5">
                <h2 class="mb-4">{{ mix.trackCount }} songs <span class="badge bg-secondary">{{ mix.genre }}</span></h2>

                <h4>Description :</h4>
                <p>{{ mix.description }}</p>

                <span>{{ mix.votesString }} votes</span>

                <form action="{{ path('app_mix_vote', {id: mix.id}) }}" method="POST" class="mt-4">
                    <button type="submit" class="btn btn-outline-primary" name="direction" value="up">
                        <span class="fa fa-thumbs-up"></span>
                    </button>
                    <button type="submit" class="btn btn-outline-danger" name="direction" value="down">
                        <span class="fa fa-thumbs-down"></span>
                    </button>
                </form>
            </div>
        </div>
    </div>

{% endblock %}